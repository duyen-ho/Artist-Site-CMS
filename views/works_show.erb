<% if !params[:category] %>
<h2>All Works</h2>
<% else %>
<h3><%= @title %></h3>
<% end %>

<section class="works-wrapper">

  <% @works.each do |work| %>

    <div class="works-individual">
      <figure>
        <a href="#"><img class="works" src="<%= work.image_url %>" alt=""></a>
      </figure>
      <figcaption class="works-info">
        <h5><%= work.title %></h5>
        <h6><%= work.medium %></h6>
        <h6><%= work.dimensions %></h6>
        <p><%= work.notes %></p>
      </figcaption>
    </div>

    <div class="clearfix">
    </div>

  <% end %>

</section>
